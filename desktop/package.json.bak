{
  "name": "smart-inbox-cleaner-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Smart Inbox Cleaner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "keywords": [
    "email",
    "gmail",
    "organization",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "canvas": "^3.1.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.smartinboxcleaner.app",
    "productName": "Smart Inbox Cleaner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "node_modules/**/*",
      "!node_modules/**/node_modules"
    ],
    "extraResources": [
      {
        "from": "../smart-inbox-cleaner",
        "to": "smart-inbox-cleaner",
        "filter": [
          "**/*",
          "!__pycache__"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "your-username",
        "repo": "smart-inbox-cleaner"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.png",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icon.png"
    },
    "protocols": [
      {
        "name": "Smart Inbox Cleaner Protocol",
        "schemes": [
          "smartinbox"
        ]
      }
    ]
  }
}
